<div class="row">
  <div class="col-md-6">
    <% if @teacher.image.present? %>
      <%= image_tag(@teacher.image.medium.url, class: "thumbnail") %>
    <% else %>
      <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2> <%= @teacher.nickname %> </h2>
    <div style="height:100px;">
      <p>
        <%= @teacher.description %>
      </p>
    </div>
  </div>
</div>

<table class="table table-boldered">
  <thread>
  <tr>
    <td>Title</td>
    <td>Category</td>
    <td>Participants</td>
  </tr>
  </thread>

  <tbody>
  <% @courses.each do |course| %>
  <tr>
    <td>
      <%= link_to(course.title, course_path(course)) %>
    </td>
    <td>
      <%= course.course_category.title %>
    </td>
    <td>
      <%= course.students.count %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>
