<table class="table table-boldered">
  <% @teachers.each do |teacher| %>
  <tr>
    <td>
      <% if teacher.image.present? %>
          <%= image_tag(teacher.image.thumb.url, class: "thumbnail") %>
      <% else %>
          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
      <% end %>
    </td>
    <td>
      <%= link_to teacher.nickname, teacher_path(teacher) %>
      <br>
      <p><%= teacher.description %></p>
    </td>
  </tr>
  <% end %>
</table>
