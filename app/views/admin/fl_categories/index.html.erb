<div class="pull-right">
  <%= link_to("Add a first level category", new_admin_fl_category_path, :class => "btn btn-default" ) %>
</div>

<table class="table table-boldered">
  <thead>
       <tr>
           <td>类别</td>
           <td>创建时间</td>
       </tr>
   </thead>
 <tbody>
 <% @fl_categories.each do |fl_category| %>
 <tr>
   <td>
     <%= fl_category.title %>
   </td>
   <td>
     <%= fl_category.created_at %>
   </td>
   <td>
     <%= link_to("Edit", edit_admin_fl_category_path(fl_category)) %>
     <%= link_to("Delete", admin_fl_category_path(fl_category), method: :delete, data: {confirm: "Are you sure?"}) %>
   </td>
 </tr>
 <% end %>
 </tbody>
</table>
