<%= simple_form_for [@course, @video] do |f| %>

  <div class="group1">
    <%= f.input :title %>
  </div>

  <div class="group1">
    <%= f.input :description %>
  </div>

  <div class="group1">
    <%= f.input :position %>
  </div>

  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

<% end %>
